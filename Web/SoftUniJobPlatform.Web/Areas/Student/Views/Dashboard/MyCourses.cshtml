@using SoftUniJobPlatform.Services.Data
@model SoftUniJobPlatform.Web.ViewModels.Course.AllCoursesViewModel

@{
    ViewData["Title"] = "MyCourses";
}

<h1>MyCourses</h1>
<a button type="button" class="btn btn-primary" asp-area="Student" asp-controller="Dashboard" asp-action="CreateCourse">Add Course</a>
<h1 align="center">My courses @Model.Courses.Count()</h1>
@if (Model.Courses.Any())
{
    <ul class="list-unstyled">
        @foreach (var course in @Model.Courses)
        {



            <li class="media">
                <img class="img-fluid" height="200" width="200" src="@course.ImageUrl" alt="@course.Title">
                <div class="media-body">
                    <h5 class="mt-0 mb-1">
                        Progress: <button type="button" class="btn btn-primary">@course.CourseProgress.ToString()</button>
                    </h5>
                    @course.ShortDescription
                </div>
                <a button type="button" class="btn btn-danger" asp-area="Student" asp-controller="Dashboard" asp-action="DeleteC" asp-route-id="@course.Id">Delete</a>
            </li>
            <hr />
        }
    </ul>
}
else
{
    <span>No courses</span>
}


<script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
<script>
    $(".btn-danger").click(function (e) {
        if (confirm("Are you sure?")) {
            alert('OK');
        }
        else {
            e.preventDefault();
        }
    });
</script>