@model SoftUniJobPlatform.Web.ViewModels.Companies.CompaniesViewModel


<h1 align="center"> Welcome to SоftUni Job Platform </h1>
<div>
    <table class="table table-hover table-light">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Company</th>
            <th scope="col">Title</th>
            <th scope="col">Location</th>
          
        </tr>
        </thead>
        @foreach (var company in Model.Companies)
        {
            <tbody>
            <tr>
                <th scope="row"></th>
                <td><img src="@company.ImageUrl" width="80" class="mr-3" alt="@company.FullName"></td>
                <td>@company.FullName</td>
                <td>@company.Location</td>
               

            </tr>
            </tbody>
        }
    </table>
</div>